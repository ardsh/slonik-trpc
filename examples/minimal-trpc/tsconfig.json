{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": false,
      "downlevelIteration": true,
      "isolatedModules": true,  
      "declaration": true
    },
    "exclude": [
      "node_modules"
    ]
}